{% extends 'admin.html.twig' %}

{% block container %}
    <br>
    <br>
    <br>

    <center><h1>Nouveau Produit </h1></center>
<br>
    <div class="offset1" style="margin-left: 21px">

    <form method="post" action="{{ path('produitNew') }}" enctype="multipart/form-data">
    <td> Nom   </td>
        <br>
    <input type="text" name="nom" id="nom"/>
        <br>
<br>
        <td> Prix  </td>
        <br>
        <input type="number" name="prix" id="prix"/>
        <br>
        <br>
        <td> Description  </td>
        <br>
        <textarea name="description" id="description">
        </textarea>
        <br>
        <br>
    <td> Disponibilit√© </td>
        <input type="checkbox" name="stock" id="stock"/>
        <br>
        <br>
        {{ form_start(form, {'method': 'POST'}) }}
        {{ form_row(form.tva) }}

        <br>
    <td> Photo du produit</td>
        <input type='file' name="imageUpload" id="imageUpload" accept=".png, .jpg, .jpeg" />
        <br>
        <br>
        <input class="btn btn-success" type="submit" value="Ajouter " />
        <a class="btn btn-success" href="{{ path('produitIndex') }}">Annuler</a>
    </form>



        {{ form_end(form) }}
    </div>





{% endblock %}
