{% extends 'admin.html.twig' %}

{% block container %}

    <br>
    <br>
    <br>
    <br>
    <br>
    <center><h1>Liste des produits</h1></center>
    <br>
    <table class="table table-striped table-hover">

            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix (dt) </th>
                <th>Disponibilit√© </th>
                <th>Actions</th>
            </tr>

        <tbody>
        {% for produit in produits %}
            <tr>
                <td><a href="{{ path('produitsShow', { 'id': produit.id }) }}">{{ produit.id }}</a></td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }} dt</td>
               <td>{% if  produit.disponible == 1  %}Disponible{% else %}Indisponible{% endif %}</td>
                <td>
                    <a href="{{ path('produitDelete', { 'id': produit.id }) }}"><i class="far fa-trash-alt"></i></a>
                    <a href="{{ path('produitEdit', { 'id': produit.id }) }}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<center>
    <ul>
        <li>
            <br>
            <a class="btn btn-success" href="{{ path('produitNew') }}">Ajouter un nouveau produit</a>
        </li>
    </ul>
</center>
{% endblock %}
