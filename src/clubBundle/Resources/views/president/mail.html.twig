{% extends 'president2.html.twig' %}

{% block content %}


    <html>
    <body>



    <div class="container">
        <div class="row my-4 my-lg-5">
            <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 text-center">



                <div class="container">
                    <div class="row my-4 my-lg-5">
                        <div class="col-12 col-md-10 offset-md-1 col-lg-6 offset-lg-3 text-center">

                            <p class="font-20 semi-font fables-main-text-color mt-4 mb-5">Envoiyer email</p>

                        </div>
                    </div>

                </div>
                <br>
                <br>
                <div class="form-group">

                    {{ form_start(form, {'method': 'post', 'action': path('mail'),
                        'attr': {'class': 'fos_user_registration_register'}}) }}
                    <div class="input-icon">

                        {{ form_widget(form.from, { 'attr': {'class': 'form-control rounded-0
                   py-3 pl-5 font-13 sign-register-input','placeholder':'from'} }) }}

                    </div>
                    <br>
                    <br>
                    <div class="input-icon">

                        {{ form_widget(form.to, { 'attr': {'class': 'form-control rounded-0
                   py-3 pl-5 font-13 sign-register-input','placeholder':'to'} }) }}

                    </div>
                    <br>
                    <br>
                    <div class="input-icon">

                        {{ form_widget(form.objet, { 'attr': {'class': 'form-control rounded-0
                   py-3 pl-5 font-13 sign-register-input','placeholder':'objet'} }) }}

                    </div>
                    <br>
                    <br>
                    <div class="input-icon">

                        {{ form_widget(form.text, { 'attr': {'class': 'form-control rounded-0
                   py-3 pl-5 font-13 sign-register-input','placeholder':'text'} }) }}

                    </div>


                    <br>
                    <br>
                    <div class="input-icon">
                        <input type="submit" class="btn btn-primary block full-width m-b" value="ENVOYER" />
                    </div>

                    {{ form_end(form) }}
                </div>

            </div>
        </div>

    </div>
    </body>
    </html>



{% endblock %}